<%
  data     = get_human_diseases_plot_data()
  tagged   = data[:tagged]
  untagged = data[:untagged]
%>

<div class="row hidden-xs hidden-sm">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 style="margin-top: 10px">Content tagged with Human Disease concepts</h3>
      </div>
      <div class="panel-body">
        <div id="human-disease-graph"></div>
        <small class="text-muted">
          Untagged:<br>
          <%= untagged.map{ |key, value| key.to_s.humanize + ': ' + value.to_s }.join(', ') %>
        </small>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.12.0/d3.min.js"></script>
<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<script>
  var data = [
    <%
      plots = [
        { key: :projects,     annotation: { x: 0.105, y: 1.05 } },
        { key: :publications, annotation: { x: 0.37, y: 1.05 } },
        { key: :models,       annotation: { x: 0.63, y: 1.05 } },
        { key: :data_files,   annotation: { x: 0.895, y: 1.05 } },
      ]
      index = -1
    %>
    <% plots.each do |plot| %>
      {
        type: 'sunburst',
        ids:       [ <%== tagged.map{ |c| '"' + c[:id]     + '"' }.join(', ') %> ],
        labels:    [ <%== tagged.map{ |c| '"' +            + '"' }.join(', ') %> ],
        parents:   [ <%== tagged.map{ |c| '"' + c[:parent] + '"' }.join(', ') %> ],
        values:    [ <%== tagged.map{ |c|       c[plot[:key]]    }.join(', ') %> ],
        hovertext: [ <%== tagged.map{ |c| '"' + c[:title]  + '"' }.join(', ') %> ],
        outsidetextfont: { size: 20, color: '#377eb8' },
        leaf: { opacity: 1 },
        marker: { line: { width: 2 } },
        domain: { row: 0, column: <%= index += 1 %> },
        hovertemplate: '<b>%{hovertext}</b>' + '<extra><b>%{value}</b></extra>',
      },
    <% end %>
  ];

  var layout = {
    margin: { l: 0, r: 0, b: 0, t: 50 },
    sunburstcolorway: [ '#217290', '#EC7063', '#5499C7', '#01d28e', '#f4d03f', '#8e44ad'],
    grid: { rows: 1, columns: 4, pattern: 'independent' },
    annotations: [
      <% plots.each do |plot| %>
        {
          x: <%= plot[:annotation][:x] %>,
          y: <%= plot[:annotation][:y] %>,
          font: { size: 20 },
          text: '<%= plot[:key].to_s.humanize %>',
          xref: 'paper',
          yref: 'paper',
          xanchor: 'center',
          yanchor: 'bottom',
          showarrow: false
        },
      <% end %>
    ],
  };

  Plotly.newPlot('human-disease-graph', data, layout);
</script>